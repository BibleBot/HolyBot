{
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "no-const-assign": "error",
        "no-this-before-super": "error",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "error",
        "valid-typeof": "warn",
        "semi": "error",
        "camelcase": "error",
        "valid-jsdoc": "error",
        "accessor-pairs": "error",
        "curly": "error",
        "eqeqeq": "error",
        "no-sync": "error",
        "no-buffer-constructor": "error",
        "arrow-parens": "error",
        "brace-style": ["error", "1tbs"],
        "no-tabs": "error",
        "callback-return": "error"
    }
}
